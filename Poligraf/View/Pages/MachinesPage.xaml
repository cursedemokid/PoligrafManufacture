<Page x:Class="Poligraf.View.Pages.MachinesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poligraf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="574" d:DesignWidth="1260"
      Title="MachinesPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <ListView Name="PrintMachinesLv">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Модель" DisplayMemberBinding="{Binding Model}"/>
                    <GridViewColumn Header="Состояние" DisplayMemberBinding="{Binding State.Name}"/>
                    <GridViewColumn Header="Скорость печати в минуту" DisplayMemberBinding="{Binding PrintSpeedInMinute}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Button Name="AddBtn" Grid.Column="1" Content="Добавить" Click="AddBtn_Click"/>
            <Button Name="EditBtn" Grid.Column="3" Content="Изменить" Click="EditBtn_Click"/>
            <Button Name="DeleteBtn" Grid.Column="5" Content="Удалить" Click="DeleteBtn_Click"/>
        </Grid>
    </Grid>
</Page>
