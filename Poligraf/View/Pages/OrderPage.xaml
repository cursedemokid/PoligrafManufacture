<Page x:Class="Poligraf.View.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poligraf.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="574" d:DesignWidth="1260"
Title="OrdersPage">

    <Grid Background="White">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <ListView Name="OrdersLv">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="№" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Заказ" DisplayMemberBinding="{Binding Order.Text}"/>
                        <GridViewColumn Header="Компания" DisplayMemberBinding="{Binding Order.Client.Name}"/>
                        <GridViewColumn Header="Количество" DisplayMemberBinding="{Binding Order.Quantity}"/>
                        <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Order.Cost}"/>
                        <GridViewColumn Header="Станок" DisplayMemberBinding="{Binding PrintMachine.Model}"/>
                        <GridViewColumn Header="Станок" DisplayMemberBinding="{Binding StartDateTime}"/>
                        <GridViewColumn Header="Станок" DisplayMemberBinding="{Binding FinishDateTime}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>
                <Button Name="AddBtn" Grid.Column="1" Content="Добавить" Click="AddBtn_Click"/>
                <Button Name="EditBtn" Grid.Column="3" Content="Изменить" Click="EditBtn_Click"/>
                <Button Name="DeleteBtn" Grid.Column="5" Content="Удалить" Click="DeleteBtn_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
