<Window x:Class="Poligraf.View.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poligraf.View.Windows"
        mc:Ignorable="d"
        Title="Авторизация" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Логин"/>
        <TextBlock Grid.Row="2" Text="Пароль"/>

        <TextBox Name="LoginTb" Grid.Row="0" Grid.Column="2" Width="200"/>
        <PasswordBox Name="PasswordPb" Grid.Row="2" Grid.Column="2"  Width="200"/>

        <Button Grid.Row="4" Grid.Column="2" Content="Войти" Height="30" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
